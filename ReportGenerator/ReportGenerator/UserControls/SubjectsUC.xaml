<UserControl x:Class="ReportGenerator.UserControls.SubjectsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReportGenerator"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <local:SubjectViewModel/>
    </UserControl.DataContext>
    <Grid>
        <DataGrid DataContext="{Binding subjects, Mode=TwoWay}" ItemsSource="{Binding}" x:Name="dg" AutoGenerateColumns="True" Height="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="Auto" CanUserReorderColumns="False" CanUserResizeColumns="False" CanUserAddRows="False" CanUserSortColumns="False">

            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Add"/>
                    <MenuItem Header="Edit"/>
                    <MenuItem Header="Delete" Click="Context_Delete"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>

    </Grid>
</UserControl>
